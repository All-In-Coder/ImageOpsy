{{>header}}
<link rel="stylesheet" href="css/colorizer.css">
<link rel="stylesheet" href="css/celebrity.css">
 <div class="pageContentWrapper">
<form action="/facial-expression" enctype="multipart/form-data" method="POST">

  <div class="card">
  <img
    id="output"
    class="card-img-top"
  />
  <label for="file" id="upload" style="cursor: pointer;">Upload Image</label>
  </div>
 
  <input
    type="file"
    accept="image/*"
    name="image"
    id="file"
    onchange="loadFile(event)"
    style="display: none"

  />

  <div class="upload_image">
    <button id="up" type="submit" style="cursor: pointer">Upload Image</button>
  </div>
   


</form>
</div> 

<div class="ans">
  {{# if emotions}}
    <p class="celebrity">{{emotions}} </p>
  {{/if}}
  
  {{# if err}}
  <p>{{err}} </p>
  {{/if}}
</div>
<script>
  var loadFile = function (event) {
    var image = document.getElementById("output");
    image.src = URL.createObjectURL(event.target.files[0]);
    const upload = document.getElementById('upload');
    upload.style.display = "none";
    upload.innerHTML="";
  };
  
</script>

{{>footer}}
